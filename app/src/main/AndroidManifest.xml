<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kleinreveche.testapps">

    <application
        android:name=".TestApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestApps"
        tools:targetApi="33">
        <activity
            android:name=".NotesActivity"
            android:exported="false"
            android:label="@string/title_activity_notes"
            android:theme="@style/Theme.TestApps" />
        <activity
            android:name=".features.age_calculator.AgeCalculatorLegacyActivity"
            android:exported="true"
            android:label="@string/age_calc_legacy"
            android:theme="@style/Theme.TestApps">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.age_calculator.MaterialAgeCalculatorActivity"
            android:exported="true"
            android:label="@string/age_calc"
            android:theme="@style/Theme.TestApps">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TestApps">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.dessert.DessertClickerActivity"
            android:exported="true"
            android:label="@string/dessert_clicker"
            android:theme="@style/Theme.TestApps">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.dice.DiceRollerActivity"
            android:exported="true"
            android:label="@string/dice_roller"
            android:theme="@style/Theme.TestApps">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.cupcake.CupcakeStoreActivity"
            android:exported="true"
            android:label="@string/cupcakes"
            android:theme="@style/Theme.TestApps">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.lunch_tray.LunchTrayActivity"
            android:exported="true"
            android:label="@string/lunch_tray"
            android:theme="@style/Theme.TestApps">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>